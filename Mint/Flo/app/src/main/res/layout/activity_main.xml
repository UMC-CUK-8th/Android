<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 프래그먼트 컨테이너 (예: HomeFragment, AlbumFragment 등) -->
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/miniPlayer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 하단 미니플레이어 -->
    <LinearLayout
        android:id="@+id/miniPlayer"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/main_bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/miniPlayerAlbumImage"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_album_sample"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/miniPlayerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/miniPlayerSinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Singer Name"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 이전곡 버튼 -->
        <ImageView
            android:id="@+id/miniPlayerPrevBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_prev"
            android:layout_gravity="center_vertical"
            android:padding="5dp"/>

        <!-- 재생/일시정지 버튼 -->
        <ImageView
            android:id="@+id/miniPlayerPlayBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_play"
            android:layout_gravity="center_vertical"
            android:padding="5dp"/>

        <!-- 다음곡 버튼 -->
        <ImageView
            android:id="@+id/miniPlayerNextBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_next"
            android:layout_gravity="center_vertical"
            android:padding="5dp"/>
    </LinearLayout>

    <!-- 하단 네비게이션 바 (홈, 검색, 둘러보기, 보관함) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/menu_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:labelVisibilityMode="labeled" />

</androidx.constraintlayout.widget.ConstraintLayout>
