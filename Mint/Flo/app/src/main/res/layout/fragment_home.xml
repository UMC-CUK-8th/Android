<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flo_main_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단 배너 ViewPager2 (자동 슬라이드) -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/homeBannerVp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp" />

        <!-- CircleIndicator -->
        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/homeBannerIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <!-- '오늘 발매 음악' 섹션 Title -->
        <TextView
            android:id="@+id/todayReleaseTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 발매 음악"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- 국내 / 해외 탭 (두 개의 TextView) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/homeKoreaTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="국내"
                android:textAlignment="center"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/homeGlobalTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="해외"
                android:textAlignment="center"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- 수평 RecyclerView (앨범 목록) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeAlbumRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:overScrollMode="never"
            android:clipToPadding="false" />

        <!-- '앨범 보기' 텍스트 (클릭 시 AlbumFragment 이동) -->
        <TextView
            android:id="@+id/albumClickTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="앨범 보기(예시: 클릭)"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:padding="16dp" />

        <!-- 하단 여백 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</ScrollView>
