<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flo_main_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단 배너 ViewPager2 (자동 슬라이드) -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/homeBannerVp"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="16dp" />

        <!-- CircleIndicator -->
        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/homeBannerIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- 왼쪽에 "오늘 발매 음악" 텍스트 -->
            <TextView
                android:id="@+id/todayReleaseTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 발매 음악"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 오른쪽에 탭: 종합, 국내, 해외 -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/todayReleaseTabLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabSelectedTextColor="@android:color/holo_blue_dark"
                app:tabTextColor="@android:color/black"
                app:tabIndicatorColor="@android:color/holo_blue_dark"
                app:tabIndicatorHeight="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.tabs.TabItem
                    android:text="종합"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.tabs.TabItem
                    android:text="국내"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.tabs.TabItem
                    android:text="해외"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.tabs.TabLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- 수평 RecyclerView (앨범 목록) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeAlbumRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:overScrollMode="never"
            android:clipToPadding="false" />


        <!-- 하단 여백 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</ScrollView>
